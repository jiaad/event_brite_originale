<h1>je suis la page new d'Event</h1>

<div class="container w-50">
<h1 class="pt-5"> Crée ton Event</h1>
  <%= form_tag url_for(action: 'create'), method: "post" do %>
    <div class="form-group">
      <%= label_tag 'Title' %>
      <%= text_field_tag 'title', @event.title, class: 'form-control',  placeholder: "meetup" %>
    </div>
     <div class="form-group">
      <%= label_tag 'Description' %>
      <%= text_field_tag 'description', @event.description, class: 'form-control',  placeholder: "fuck you" %>
    </div>
     <div class="form-group">
      <%= label_tag 'Date' %>
      <%= date_field_tag(:start_date, Date.today, class: 'form-control')%>
    </div>
    <div class="form-group">
      <%= label_tag 'Durée' %>
      <%= select_tag "duration", options_for_select([ 30, 60, 90 ], 30), class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag 'Lieu' %>
      <%= text_field_tag 'location', @event.location, class: 'form-control',  placeholder: "ex : Paris" %>
    </div>
    <div class="form-group">
      <%= label_tag 'Lieu' %>
      <%= text_field_tag 'price', @event.price, class: 'form-control',  placeholder: "ex : 30€" %>
    </div>

      <%= submit_tag "Publier", class: 'btn btn-default btn-dark text-light btn-submit' %>
    <% end %>
